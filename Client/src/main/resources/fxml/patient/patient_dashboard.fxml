<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="1200.0" prefHeight="720.0"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.hospital_management.client.view.patient.PatientDashboardView"
          styleClass="dashboard-page">

    <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="dashboard-scroll">
        <VBox styleClass="dashboard-root" spacing="24.0">

            <HBox styleClass="dashboard-topbar" alignment="CENTER_LEFT" spacing="16.0">
                <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="+" styleClass="brand-icon" />
                    <Label text="Spitalul Central" styleClass="brand-text" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox styleClass="profile" alignment="CENTER_RIGHT" spacing="10.0">
                    <StackPane styleClass="profile-avatar">
                        <Label fx:id="initialsLabel" text="U" styleClass="profile-initials" />
                    </StackPane>
                    <Label fx:id="userNameLabel" text="User" styleClass="profile-name" />
                    <Button text="Logout" onAction="#onLogoutClick" styleClass="ghost-button" />
                </HBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" text="Buna ziua!" styleClass="welcome-title" />
                    <Label text="Iata o privire de ansamblu asupra sanatatii tale." styleClass="welcome-subtitle" />
                </VBox>
                <Button text="Programare Noua" onAction="#onNewAppointmentClick" styleClass="primary-button" />
            </HBox>

            <VBox spacing="20.0">
                <VBox styleClass="card" spacing="16.0">
                    <HBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="i" styleClass="section-icon" />
                        <Label text="Urmatoarea Programare" styleClass="section-title" />
                    </HBox>

                    <HBox spacing="16.0">
                        <StackPane styleClass="doctor-avatar-large">
                            <Label fx:id="nextDoctorInitials" text="DR" styleClass="doctor-initials" />
                        </StackPane>

                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label fx:id="nextDoctorName" text="Dr. --" styleClass="doctor-name" />
                            <Label fx:id="nextDoctorSpecialization" text="Specializare" styleClass="doctor-subtitle" />

                            <HBox spacing="12.0">
                                <VBox styleClass="info-chip" spacing="2.0">
                                    <Label text="Data" styleClass="chip-label" />
                                    <Label fx:id="nextDateLabel" text="--" styleClass="chip-value" />
                                </VBox>
                                <VBox styleClass="info-chip" spacing="2.0">
                                    <Label text="Ora" styleClass="chip-label" />
                                    <Label fx:id="nextTimeLabel" text="--" styleClass="chip-value" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </HBox>

                    <HBox spacing="12.0">
                        <Button text="Modifica" onAction="#onModifyAppointmentClick" styleClass="ghost-button" />
                        <Button text="Anuleaza" onAction="#onCancelAppointmentClick" styleClass="danger-button" />
                    </HBox>
                </VBox>

                <VBox styleClass="card" spacing="16.0">
                    <HBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="+" styleClass="section-icon" />
                        <Label text="Fisa medicala" styleClass="section-title" />
                    </HBox>

                    <HBox spacing="20.0">
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                            <Label text="Date personale" styleClass="subsection-title" />
                            <HBox spacing="16.0">
                                <GridPane hgap="10.0" vgap="6.0">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="120.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <Label text="Nume complet" styleClass="muted-text" GridPane.rowIndex="0" />
                                    <Label fx:id="patientNameLabel" text="-" styleClass="detail-value" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                    <Label text="CNP" styleClass="muted-text" GridPane.rowIndex="1" />
                                    <Label fx:id="patientCnpLabel" text="-" styleClass="detail-value" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                    <Label text="Data nasterii" styleClass="muted-text" GridPane.rowIndex="2" />
                                    <Label fx:id="patientBirthDateLabel" text="-" styleClass="detail-value" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                    <Label text="Varsta" styleClass="muted-text" GridPane.rowIndex="3" />
                                    <Label fx:id="patientAgeLabel" text="-" styleClass="detail-value" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                                </GridPane>

                                <GridPane hgap="10.0" vgap="6.0">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="100.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <Label text="Sex" styleClass="muted-text" GridPane.rowIndex="0" />
                                    <Label fx:id="patientGenderLabel" text="-" styleClass="detail-value" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                    <Label text="Telefon" styleClass="muted-text" GridPane.rowIndex="1" />
                                    <Label fx:id="patientPhoneLabel" text="-" styleClass="detail-value" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                    <Label text="Adresa" styleClass="muted-text" GridPane.rowIndex="2" />
                                    <Label fx:id="patientAddressLabel" text="-" wrapText="true" styleClass="detail-value" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                                </GridPane>
                            </HBox>
                        </VBox>

                        <VBox spacing="10.0" prefWidth="320.0">
                            <Label text="Date medicale" styleClass="subsection-title" />
                            <HBox styleClass="summary-row" spacing="10.0">
                                <Label text="Grupa sanguina" styleClass="muted-text" />
                                <Label fx:id="bloodTypeLabel" text="-" styleClass="pill" />
                            </HBox>
                            <HBox styleClass="summary-row" spacing="10.0">
                                <Label text="Greutate" styleClass="muted-text" />
                                <Label fx:id="weightLabel" text="-" styleClass="pill" />
                            </HBox>
                            <HBox styleClass="summary-row" spacing="10.0">
                                <Label text="Inaltime" styleClass="muted-text" />
                                <Label fx:id="heightLabel" text="-" styleClass="pill" />
                            </HBox>
                            <VBox spacing="6.0">
                                <Label text="Alergii cunoscute" styleClass="muted-text" />
                                <FlowPane fx:id="allergiesPane" hgap="6.0" vgap="6.0" />
                            </VBox>
                            <VBox spacing="6.0">
                                <Label text="Conditii cronice" styleClass="muted-text" />
                                <FlowPane fx:id="conditionsPane" hgap="6.0" vgap="6.0" />
                            </VBox>
                        </VBox>
                    </HBox>

                    <VBox spacing="8.0">
                        <Label text="Rezumat" styleClass="subsection-title" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Total inregistrari" styleClass="muted-text" />
                            <Label fx:id="totalEntriesLabel" text="-" styleClass="pill" />
                        </HBox>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Ultima actualizare" styleClass="muted-text" />
                            <Label fx:id="lastUpdateLabel" text="-" styleClass="pill" />
                        </HBox>
                    </VBox>

                    <VBox spacing="10.0">
                        <Label text="Fise consultatii" styleClass="subsection-title" />
                        <VBox fx:id="medicalRecordsContainer" spacing="12.0" />
                    </VBox>
                </VBox>
            </VBox>

            <VBox styleClass="card" spacing="12.0">
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <Label text="Lista programari" styleClass="section-title" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="Filtru data" styleClass="muted-text" />
                    <DatePicker fx:id="appointmentsFilterDatePicker" styleClass="field-date" />
                    <Label text="Status" styleClass="muted-text" />
                    <ComboBox fx:id="appointmentsStatusFilter" styleClass="filter-combo" />
                    <Button fx:id="clearAppointmentsFilterButton" text="Sterge filtru"
                            onAction="#onClearAppointmentsFilterClick" styleClass="ghost-button" />
                </HBox>

                <GridPane fx:id="appointmentsTableHeader" styleClass="table-row table-row-header" />
                <VBox fx:id="appointmentsContainer" spacing="0.0" />
            </VBox>

            <Label fx:id="statusLabel" styleClass="status-label" />
        </VBox>
    </ScrollPane>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="1200.0" prefHeight="720.0"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.hospital_management.client.view.patient.PatientDashboardView"
          styleClass="dashboard-page">

    <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="dashboard-scroll">
        <VBox styleClass="dashboard-root" spacing="24.0">

            <HBox styleClass="dashboard-topbar" alignment="CENTER_LEFT" spacing="20.0">
                <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="+" styleClass="brand-icon" />
                    <Label text="Spitalul Central" styleClass="brand-text" />
                </HBox>

                <HBox styleClass="nav" alignment="CENTER" spacing="12.0" HBox.hgrow="ALWAYS">
                    <Button text="Acasa" onAction="#onNavHomeClick" styleClass="nav-button" />
                    <Button text="Programare" onAction="#onNavAppointmentsClick" styleClass="nav-button" />
                    <Button text="Fisa Medicala" onAction="#onNavHistoryClick" styleClass="nav-button" />
                </HBox>

                <HBox styleClass="profile" alignment="CENTER_RIGHT" spacing="10.0">
                    <VBox spacing="2.0">
                        <Label fx:id="userNameLabel" text="User" styleClass="profile-name" />
                    </VBox>
                    <StackPane styleClass="profile-avatar">
                        <Label fx:id="initialsLabel" text="U" styleClass="profile-initials" />
                    </StackPane>
                    <Button text="Logout" onAction="#onLogoutClick" styleClass="ghost-button" />
                </HBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" text="Buna ziua!" styleClass="welcome-title" />
                    <Label text="Iata o privire de ansamblu asupra sanatatii tale." styleClass="welcome-subtitle" />
                </VBox>
                <Button text="Programare Noua" onAction="#onNewAppointmentClick" styleClass="primary-button" />
            </HBox>

            <HBox spacing="20.0" alignment="TOP_LEFT">
                <VBox styleClass="card" spacing="16.0" HBox.hgrow="ALWAYS">
                    <HBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="i" styleClass="section-icon" />
                        <Label text="Urmatoarea Programare" styleClass="section-title" />
                    </HBox>

                    <HBox spacing="16.0">
                        <StackPane styleClass="doctor-avatar-large">
                            <Label fx:id="nextDoctorInitials" text="DR" styleClass="doctor-initials" />
                        </StackPane>

                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label fx:id="nextDoctorName" text="Dr. --" styleClass="doctor-name" />
                            <Label fx:id="nextDoctorSpecialization" text="Specializare" styleClass="doctor-subtitle" />

                            <HBox spacing="12.0">
                                <VBox styleClass="info-chip" spacing="2.0">
                                    <Label text="Data" styleClass="chip-label" />
                                    <Label fx:id="nextDateLabel" text="--" styleClass="chip-value" />
                                </VBox>
                                <VBox styleClass="info-chip" spacing="2.0">
                                    <Label text="Ora" styleClass="chip-label" />
                                    <Label fx:id="nextTimeLabel" text="--" styleClass="chip-value" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </HBox>

                    <HBox spacing="12.0">
                        <Button text="Modifica" onAction="#onModifyAppointmentClick" styleClass="ghost-button" />
                        <Button text="Anuleaza" onAction="#onCancelAppointmentClick" styleClass="danger-button" />
                    </HBox>
                </VBox>

                <VBox styleClass="card" spacing="12.0" prefWidth="320.0">
                    <HBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="+" styleClass="section-icon" />
                        <Label text="Sumar Medical" styleClass="section-title" />
                    </HBox>
                    <HBox styleClass="summary-row" spacing="10.0">
                        <Label text="Grupa sanguina" styleClass="muted-text" />
                        <Label fx:id="bloodTypeLabel" text="-" styleClass="pill" />
                    </HBox>
                    <HBox styleClass="summary-row" spacing="10.0">
                        <Label text="Greutate" styleClass="muted-text" />
                        <Label fx:id="weightLabel" text="-" styleClass="pill" />
                    </HBox>
                    <HBox styleClass="summary-row" spacing="10.0">
                        <Label text="Inaltime" styleClass="muted-text" />
                        <Label fx:id="heightLabel" text="-" styleClass="pill" />
                    </HBox>
                    <VBox spacing="6.0">
                        <Label text="Alergii cunoscute" styleClass="muted-text" />
                        <FlowPane fx:id="allergiesPane" hgap="6.0" vgap="6.0" />
                    </VBox>
                    <VBox spacing="6.0">
                        <Label text="Conditii cronice" styleClass="muted-text" />
                        <FlowPane fx:id="conditionsPane" hgap="6.0" vgap="6.0" />
                    </VBox>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Fisa medicala" styleClass="section-title" />
                <Button text="Vezi fisa medicala" onAction="#onHistoryClick" styleClass="link-button" />
            </HBox>

            <VBox fx:id="historyContainer" styleClass="card" spacing="0.0" />

            <Label fx:id="statusLabel" styleClass="status-label" />
        </VBox>
    </ScrollPane>
</StackPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="1200.0" prefHeight="720.0"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.hospital_management.client.view.patient.PatientMedicalRecordView"
          styleClass="record-page">

    <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="record-scroll">
        <VBox styleClass="record-root" spacing="24.0">

            <HBox styleClass="topbar" alignment="CENTER_LEFT" spacing="20.0">
                <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="+" styleClass="brand-icon" />
                    <Label text="Spitalul Central" styleClass="brand-text" />
                </HBox>

                <HBox styleClass="nav" alignment="CENTER" spacing="12.0" HBox.hgrow="ALWAYS">
                    <Button text="Acasa" onAction="#onNavHomeClick" styleClass="nav-button" />
                    <Button text="Programari" onAction="#onNavAppointmentsClick" styleClass="nav-button" />
                    <Button text="Istoric Medical" onAction="#onNavHistoryClick" styleClass="nav-button nav-active" />
                    <Button text="Rezultate" onAction="#onNavResultsClick" styleClass="nav-button" />
                </HBox>

                <HBox styleClass="profile" alignment="CENTER_RIGHT" spacing="10.0">
                    <VBox spacing="2.0">
                        <Label fx:id="userNameLabel" text="User" styleClass="profile-name" />
                        <Label fx:id="roleLabel" text="Pacient" styleClass="profile-role" />
                    </VBox>
                    <StackPane styleClass="profile-avatar">
                        <Label fx:id="initialsLabel" text="U" styleClass="profile-initials" />
                    </StackPane>
                    <Button text="Logout" onAction="#onLogoutClick" styleClass="ghost-button" />
                </HBox>
            </HBox>

            <VBox spacing="6.0">
                <Label text="Fisa medicala" styleClass="page-title" />
                <Label text="Detalii despre diagnostice, tratamente si observatii."
                       styleClass="page-subtitle" />
            </VBox>

            <HBox spacing="16.0">
                <VBox styleClass="card" spacing="8.0">
                    <Label text="Rezumat" styleClass="section-title" />
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Total inregistrari" styleClass="muted-text" />
                        <Label fx:id="totalEntriesLabel" text="-" styleClass="pill" />
                    </HBox>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Ultima actualizare" styleClass="muted-text" />
                        <Label fx:id="lastUpdateLabel" text="-" styleClass="pill" />
                    </HBox>
                </VBox>
            </HBox>

            <VBox spacing="12.0">
                <Label text="Inregistrari medicale" styleClass="section-title" />
                <VBox fx:id="recordsContainer" spacing="12.0" />
            </VBox>

            <Label fx:id="statusLabel" styleClass="status-label" />
        </VBox>
    </ScrollPane>
</StackPane>

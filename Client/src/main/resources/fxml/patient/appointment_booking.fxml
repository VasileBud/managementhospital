<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="1200.0" prefHeight="720.0"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="view.patient.AppointmentBookingView"
          styleClass="appointment-page">

    <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="appointment-scroll">
        <VBox styleClass="appointment-root" spacing="20.0">

            <HBox styleClass="dashboard-topbar" alignment="CENTER_LEFT" spacing="16.0">
                <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="+" styleClass="brand-icon" />
                    <Label text="Spitalul Central" styleClass="brand-text" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox styleClass="profile" alignment="CENTER_RIGHT" spacing="10.0">
                    <VBox spacing="2.0">
                        <Label fx:id="userNameLabel" text="User" styleClass="profile-name" />
                        <Label fx:id="userRoleLabel" text="Rol" styleClass="profile-role" />
                    </VBox>
                    <StackPane styleClass="profile-avatar">
                        <Label fx:id="initialsLabel" text="U" styleClass="profile-initials" />
                    </StackPane>
                    <Button text="Inapoi" onAction="#onNavDashboardClick" styleClass="ghost-button" />
                </HBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12.0">
                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                    <Label text="Programari" styleClass="page-title" />
                    <Label text="Creeaza sau modifica o programare."
                           styleClass="page-subtitle" />
                </VBox>
                <Button fx:id="clearEditButton" text="Renunta la editare" onAction="#onClearEditClick"
                        styleClass="ghost-button" visible="false" managed="false" />
            </HBox>

             <VBox styleClass="card" spacing="12.0">
                 <HBox alignment="CENTER_LEFT" spacing="8.0">
                     <Label fx:id="formTitleLabel" text="Programare noua" styleClass="section-title" />
                     <Label fx:id="formHintLabel" text="" styleClass="muted-text" />
                 </HBox>

                 <VBox spacing="16.0">
                     <VBox fx:id="patientBox" spacing="6.0" HBox.hgrow="ALWAYS">
                         <Label text="Pacient" styleClass="muted-text" />
                         <StackPane>
                             <ComboBox fx:id="patientCombo" maxWidth="Infinity" promptText="Alege pacientul" styleClass="field-combo" />
                             <Label fx:id="patientLabel" maxWidth="Infinity" text="" styleClass="field-static" visible="false" managed="false" />
                         </StackPane>
                     </VBox>
                     <VBox fx:id="specializationBox" spacing="6.0" HBox.hgrow="ALWAYS">
                         <Label text="Specializare" styleClass="muted-text" />
                         <ComboBox fx:id="specializationCombo" maxWidth="Infinity" promptText="Toate specializarile" styleClass="field-combo" />
                     </VBox>
                     <VBox fx:id="doctorBox" spacing="6.0" HBox.hgrow="ALWAYS">
                         <Label text="Medic" styleClass="muted-text" />
                         <StackPane>
                             <ComboBox fx:id="doctorCombo" maxWidth="Infinity" promptText="Alege medicul" styleClass="field-combo" />
                             <Label fx:id="doctorLabel" maxWidth="Infinity" text="" styleClass="field-static" visible="false" managed="false" />
                         </StackPane>
                     </VBox>
                     <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                         <Label text="Serviciu medical" styleClass="muted-text" />
                         <ComboBox fx:id="serviceCombo" maxWidth="Infinity" promptText="Alege serviciul" styleClass="field-combo" />
                     </VBox>
                     <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                         <Label text="Data" styleClass="muted-text" />
                         <DatePicker fx:id="datePicker" maxWidth="Infinity" styleClass="field-date" />
                     </VBox>
                 </VBox>

                 <VBox spacing="6.0">
                     <HBox alignment="CENTER_LEFT" spacing="8.0">
                         <Label text="Ore disponibile" styleClass="muted-text" />
                         <Region HBox.hgrow="ALWAYS" />
                     </HBox>
                     <FlowPane fx:id="timeSlotsPane" hgap="8.0" vgap="8.0" />
                 </VBox>

                 <VBox spacing="6.0">
                     <Label text="Detalii programare selectate" styleClass="muted-text" />
                     <Label fx:id="bookingDetailsLabel" maxWidth="Infinity" text="" wrapText="true" styleClass="field-static" />
                 </VBox>

                 <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <Button fx:id="saveButton" text="Creeaza programarea" onAction="#onSaveClick"
                             styleClass="primary-button" />
                     <Button fx:id="resetButton" text="Resetare" onAction="#onResetClick" styleClass="ghost-button" />
                 </HBox>
             </VBox>

            <Label fx:id="statusLabel" styleClass="status-label" />
        </VBox>
    </ScrollPane>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="1200.0" prefHeight="720.0"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.hospital_management.client.view.patient.AppointmentBookingView"
          styleClass="appointment-page">

    <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="appointment-scroll">
        <VBox styleClass="appointment-root" spacing="24.0">

            <HBox styleClass="topbar" alignment="CENTER_LEFT" spacing="20.0">
                <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="+" styleClass="brand-icon" />
                    <Label text="Spitalul Central" styleClass="brand-text" />
                </HBox>

                <HBox styleClass="nav" alignment="CENTER" spacing="12.0" HBox.hgrow="ALWAYS">
                    <Button text="Acasa" onAction="#onNavHomeClick" styleClass="nav-button" />
                    <Button text="Programari" onAction="#onNavAppointmentsClick" styleClass="nav-button nav-active" />
                    <Button text="Istoric Medical" onAction="#onNavHistoryClick" styleClass="nav-button" />
                    <Button text="Rezultate" onAction="#onNavResultsClick" styleClass="nav-button" />
                </HBox>

                <HBox styleClass="profile" alignment="CENTER_RIGHT" spacing="10.0">
                    <VBox spacing="2.0">
                        <Label fx:id="userNameLabel" text="User" styleClass="profile-name" />
                        <Label fx:id="roleLabel" text="Pacient" styleClass="profile-role" />
                    </VBox>
                    <StackPane styleClass="profile-avatar">
                        <Label fx:id="initialsLabel" text="U" styleClass="profile-initials" />
                    </StackPane>
                    <Button text="Logout" onAction="#onLogoutClick" styleClass="ghost-button" />
                </HBox>
            </HBox>

            <VBox spacing="6.0">
                <Label text="Programare Consultatie" styleClass="page-title" />
                <Label text="Completeaza pasii de mai jos pentru a stabili o intalnire cu medicii nostri."
                       styleClass="page-subtitle" />
            </VBox>

            <HBox spacing="20.0" alignment="TOP_LEFT">
                <VBox spacing="16.0" HBox.hgrow="ALWAYS">
                    <VBox styleClass="card" spacing="12.0">
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <Label text="Specializare si Medic" styleClass="section-title" />
                            <Label fx:id="selectedDoctorHint" text="" styleClass="muted-text" />
                        </HBox>

                        <HBox spacing="16.0">
                            <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                <Label text="Specializare" styleClass="muted-text" />
                                <ComboBox fx:id="specializationCombo" promptText="Alege specializarea"
                                          styleClass="field-combo" />
                            </VBox>
                            <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                <Label text="Medic" styleClass="muted-text" />
                                <ComboBox fx:id="doctorCombo" promptText="Alege medicul"
                                          styleClass="field-combo" />
                            </VBox>
                        </HBox>

                        <VBox spacing="6.0">
                            <Label text="Serviciu medical" styleClass="muted-text" />
                            <ComboBox fx:id="serviceCombo" promptText="Alege serviciul"
                                      styleClass="field-combo" />
                        </VBox>
                    </VBox>

                    <VBox styleClass="card" spacing="12.0">
                        <Label text="Selecteaza Data si Ora" styleClass="section-title" />
                        <HBox spacing="16.0">
                            <VBox spacing="6.0">
                                <Label text="Data" styleClass="muted-text" />
                                <DatePicker fx:id="datePicker" styleClass="field-date" />
                            </VBox>
                            <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                <Label text="Ore disponibile" styleClass="muted-text" />
                                <FlowPane fx:id="timeSlotsPane" hgap="8.0" vgap="8.0" />
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>

                <VBox spacing="16.0" prefWidth="320.0">
                    <VBox styleClass="card" spacing="12.0">
                        <Label text="Sumar Programare" styleClass="section-title" />
                        <VBox spacing="8.0">
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Medic" styleClass="muted-text" />
                                <Label fx:id="summaryDoctorLabel" text="-" styleClass="summary-value" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Specializare" styleClass="muted-text" />
                                <Label fx:id="summarySpecLabel" text="-" styleClass="summary-value" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Data" styleClass="muted-text" />
                                <Label fx:id="summaryDateLabel" text="-" styleClass="summary-value" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Ora" styleClass="muted-text" />
                                <Label fx:id="summaryTimeLabel" text="-" styleClass="summary-value" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Serviciu" styleClass="muted-text" />
                                <Label fx:id="summaryServiceLabel" text="-" styleClass="summary-value" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Pret" styleClass="muted-text" />
                                <Label fx:id="summaryPriceLabel" text="-" styleClass="summary-price" />
                            </HBox>
                        </VBox>
                    </VBox>

                    <Button fx:id="bookButton" text="Continua spre confirmare"
                            onAction="#onBookClick" styleClass="primary-button" />
                    <Button text="Inapoi" onAction="#onBackClick" styleClass="ghost-button" />
                </VBox>
            </HBox>

            <Label fx:id="statusLabel" styleClass="status-label" />
        </VBox>
    </ScrollPane>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="1200.0" prefHeight="720.0"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.hospital_management.client.view.patient.PublicView"
          styleClass="public-page">

    <ScrollPane fx:id="scrollPane" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="public-scroll">
        <VBox fx:id="contentRoot" styleClass="public-root" spacing="28.0">

            <HBox styleClass="topbar" alignment="CENTER_LEFT" spacing="20.0">
                <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="+" styleClass="brand-icon" />
                    <Label text="Spitalul Central" styleClass="brand-text" />
                </HBox>

                <HBox styleClass="top-actions" alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <Button text="Autentificare" onAction="#onGoToLoginClick" styleClass="primary-button" />
                    <Button text="Inregistrare" onAction="#onGoToRegisterClick" styleClass="secondary-button" />
                </HBox>
            </HBox>

            <StackPane fx:id="heroSection" styleClass="hero">
                <VBox alignment="CENTER" spacing="14.0" styleClass="hero-content">
                    <Label text="Sanatatea ta este prioritatea noastra" styleClass="hero-title" />
                    <Label text="Gaseste rapid medicul specialist si programeaza o consultatie online." styleClass="hero-subtitle" />

                    <HBox styleClass="search-bar" alignment="CENTER" spacing="10.0">
                        <TextField fx:id="searchField" promptText="Cauta medic (ex: Dr. Popescu)" styleClass="search-input" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="specializationFilter" styleClass="search-combo" HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchButton" text="Cauta" onAction="#onSearchClick" styleClass="primary-button" />
                    </HBox>
                </VBox>
            </StackPane>

            <VBox fx:id="specializationsSection" styleClass="section" spacing="12.0">
                <Label text="Specializari" styleClass="section-title" />
                <FlowPane fx:id="specializationChips" hgap="10.0" vgap="10.0" />
            </VBox>

            <VBox fx:id="doctorsSection" styleClass="section" spacing="12.0">
                <Label text="Medici disponibili" styleClass="section-title" />
                <VBox fx:id="doctorsContainer" spacing="14.0" />
            </VBox>

            <Label fx:id="statusLabel" styleClass="status-label" />
        </VBox>
    </ScrollPane>
</StackPane>

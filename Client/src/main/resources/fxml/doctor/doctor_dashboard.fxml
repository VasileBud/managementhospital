<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.doctor.DoctorDashboardView"
            styleClass="doctor-dashboard" fx:id="root">

    <top>
        <HBox styleClass="dashboard-topbar" alignment="CENTER_LEFT" spacing="16.0">
            <BorderPane.margin>
                <Insets top="20.0" right="32.0" bottom="0.0" left="32.0" />
            </BorderPane.margin>
            <HBox styleClass="brand" alignment="CENTER_LEFT" spacing="10.0">
                <Label text="+" styleClass="brand-icon" />
                <Label text="Spitalul Central" styleClass="brand-text" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <HBox styleClass="profile" alignment="CENTER_RIGHT" spacing="10.0">
                <VBox spacing="2.0" alignment="CENTER_RIGHT">
                    <Label fx:id="doctorNameLabel" text="Doctor Name" styleClass="profile-name" />
                    <Label fx:id="doctorRoleLabel" text="MEDIC" styleClass="profile-role" />
                </VBox>
                <StackPane styleClass="profile-avatar">
                    <Label fx:id="doctorInitialsLabel" text="DR" styleClass="profile-initials" />
                </StackPane>
                <Button text="Logout" onAction="#onLogoutClick" styleClass="ghost-button" />
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox styleClass="main">

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="main-scroll">
                <VBox styleClass="content-root" spacing="20">

                    <HBox styleClass="stats-row">
                        <VBox styleClass="stat-card" spacing="8.0" HBox.hgrow="ALWAYS">
                            <HBox spacing="8.0" alignment="CENTER_LEFT">
                                <Label text="Total Programari Azi" styleClass="stat-title" />
                                <Label text="P" styleClass="stat-icon" />
                            </HBox>
                            <Label text="-" styleClass="stat-value" />
                        </VBox>
                        <VBox styleClass="stat-card" spacing="8.0" HBox.hgrow="ALWAYS">
                            <HBox spacing="8.0" alignment="CENTER_LEFT">
                                <Label text="Pacienti in Asteptare" styleClass="stat-title" />
                                <Label text="A" styleClass="stat-icon" />
                            </HBox>
                            <Label text="-" styleClass="stat-value" />
                        </VBox>
                    </HBox>

                    <VBox styleClass="table-card">
                        <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="filter-row">
                            <Label text="Data:" styleClass="filter-label" />
                            <DatePicker fx:id="datePicker" styleClass="field-date" prefWidth="150" />

                            <Label text="Serviciu:" styleClass="filter-label" />
                            <ComboBox fx:id="serviceFilterCombo" styleClass="filter-combo" prefWidth="200" promptText="Toate serviciile"/>

                            <Button fx:id="clearFilterButton" text="Reset" onAction="#onClearFilterClick" styleClass="ghost-button" />

                            <Region HBox.hgrow="ALWAYS" />
                            <Button text="Programare Noua" onAction="#onNewAppointmentClick" styleClass="primary-button" />
                        </HBox>

                        <GridPane styleClass="table-row table-row-header">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="52" />
                                <ColumnConstraints percentWidth="24" />
                                <ColumnConstraints percentWidth="24" />
                            </columnConstraints>
                            <Label text="PACIENT" styleClass="table-header-text" GridPane.columnIndex="0" alignment="CENTER_LEFT" />
                            <Label text="STATUS" styleClass="table-header-text" GridPane.columnIndex="1" alignment="CENTER_LEFT" />
                            <Label text="ACTIUNI" styleClass="table-header-text" GridPane.columnIndex="2" alignment="CENTER_RIGHT" />
                        </GridPane>

                        <VBox fx:id="appointmentsContainer" spacing="0.0" />

                        <VBox fx:id="emptyStateBox" alignment="CENTER" spacing="10" visible="false" managed="false" style="-fx-padding: 30;">
                            <Label text="Nu există programări pentru criteriile selectate." style="-fx-text-fill: gray; -fx-font-size: 14px;" />
                        </VBox>

                        <HBox styleClass="table-footer" alignment="CENTER_LEFT" spacing="6.0">
                            <Region HBox.hgrow="ALWAYS" />
                            <Button text="&lt;" onAction="#onPrevPageClick" styleClass="pagination-button" />
                            <Button text="&gt;" onAction="#onNextPageClick" styleClass="pagination-button" />
                        </HBox>
                    </VBox>

                    <VBox styleClass="table-card">
                        <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="filter-row">
                            <Label text="Pacienti" styleClass="card-title" />
                            <Region HBox.hgrow="ALWAYS" />
                            <HBox styleClass="search-box" alignment="CENTER_LEFT" spacing="6.0">
                                <Label text="Cauta" styleClass="search-label" />
                                <TextField fx:id="patientSearchField" promptText="Nume pacient" styleClass="search-field" prefWidth="200" />
                            </HBox>
                            <ComboBox fx:id="patientStatusFilter" styleClass="filter-combo" prefWidth="160" promptText="Status" />
                        </HBox>

                        <GridPane styleClass="table-row table-row-header">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="14" />
                                <ColumnConstraints percentWidth="32" />
                                <ColumnConstraints percentWidth="28" />
                                <ColumnConstraints percentWidth="18" />
                                <ColumnConstraints percentWidth="18" />
                            </columnConstraints>
                            <Label text="PACIENT" styleClass="table-header-text" GridPane.columnIndex="0" />
                            <Label text="STATUS" styleClass="table-header-text" GridPane.columnIndex="3" />
                            <Label text="ACTIUNI" styleClass="table-header-text" GridPane.columnIndex="4" />
                        </GridPane>

                        <VBox fx:id="patientsContainer" spacing="0.0" />

                        <VBox fx:id="patientsEmptyBox" alignment="CENTER" spacing="8" visible="false" managed="false" style="-fx-padding: 20;">
                            <Label text="Nu exista pacienti pentru acest medic." styleClass="table-text-muted" />
                        </VBox>
                    </VBox>

                    <Label fx:id="statusLabel" text="" styleClass="status-label" />
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
